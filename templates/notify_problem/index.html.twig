{% extends 'base.html.twig' %}

{% block title %}Hello AddApplicationController!{% endblock %}

{% block body %}
    <div class="sidebar"></div>
    <div class="marge" id="main-block">
        <div class="container mt-5">
            <div class="row mt-3">
                <div class="col-12">
                    <a class="lien" href="{{ path('app_meteo', { 'page' : 1}) }}">
                        <h2 class="mb-5">
                            <img width="50" height="50"
                                 src="https://img.icons8.com/ios-filled/50/partly-cloudy-day--v1.png"
                                 alt="partly-cloudy-day--v1"/>
                            <span class="logo">Météo des services</span>
                        </h2>
                    </a>
                </div>
            </div>
            {{ form_start(form) }}
            <div class="row mt-3">
                <div class="col-3">
                    <h6 class="droite">Application<span style="color:red">*</span></h6>
                </div>
                <div class="col-6">
                    {{ form_widget(form.title, {'attr': {'class': 'form-select rounded', 'style': 'width: 250px;'}}) }}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-3">
                    <h6 class="droite">Quel est votre problème ?<span style="color:red">*</span></h6>
                </div>
                <div class="col-6">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control rounded', 'style': 'width: 250px;'}}) }}
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-6">
                    <div class="d-flex justify-content-end"><br>Les champs marqués d'un astérisque rouge sont obligatoires.</div>
                    <div class="d-flex justify-content-end" style="font-size: 13px"><i>Ces informations seront envoyées par email à l'équipe météo des services.</i> </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-3"></div>
                <div class="col-6">
                    <button type="submit" class="save shadow"><b>Envoyer</b></button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

