{% extends 'base.html.twig' %}

{% block body %}
            <div class="row mt-3">
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <div class="d-inline">
                    <a class="link-primary" href="{{ path('admin_user_index') }}">Backoffice gestion de l'application météo </a>
                </div>
                {% endif %}
                <div class="row">
                    <div class="col-2 offset-2">
                        {{ form_start(form) }}
                        {{ form_widget(form.searchTerm, {'attr': {'class': 'form-control rounded'}}) }}
                    </div>
                    <div class="col-2 pe-5">
                        {{ form_widget(form.selectedState, {'attr': {'class': 'form-select rounded'}}) }}
                    </div>
                    <div class="col-2 ms-n4">
                        <div class='d-inline fw-light'>Résultats :</div>
                        <div class="d-inline-block">
                            {{ form_widget(form.limit, {'attr': {'class': 'form-select rounded'}}) }}
                        </div>
                    </div>
                    <div class="col-1 d-flex justify-content-start">
                        <button class="btn btn-light px-2" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                 class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                            </svg>
                        </button>
                        {{ form_end(form) }}
                    </div>
                    {% if is_granted('ROLE_USER') %}
                        <div class="col-2 p-0">
                            <a href="{{ path('app_notify_problem') }}">
                                <button class="btn btn-light">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                         fill="currentColor"
                                         class="bi bi-exclamation-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                        <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                                    </svg>
                                    Signaler un problème
                                </button>
                            </a>
                        </div>
                    {% endif %}
                    {% if false %}
                        <div style="margin-left: auto">
                            <div class="col-1">
                                <a href="{{ path('app_add_application') }}">
                                    <button class="btn btn-light">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                             fill="currentColor"
                                             class="bi bi-plus" viewBox="0 0 16 16">
                                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                        </svg>
                                        Ajouter une application
                                    </button>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="row mt-5 d-flex justify-content-center">
                <div class="col-3 offset-2 text-center"><h6>SERVICE NUMERIQUE</h6></div>
                <div class="col-2 text-center"><h6>ÉTAT COURANT</h6></div>
                <div class="col-3 text-center"><h6>DERNIÈRE MISE À JOUR</h6></div>
                <div class="col-1 text-center"></div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="col-1 text-center"></div>
                    <div class="col-1 text-center"></div>
                {% endif %}
            </div>
            {% if nbPage!=0 %}
                {% for application in applications %}
                    <div class="row mt-3 d-flex justify-content-center">
                        <div class="col-1 col-lg-2 d-flex justify-content-end">
                            {% if application.isInMaintenance %}
                                {% set maintenance = application.nextMaintenance %}
                                <a class="action {{ maintenance.state }}-maintenance" onclick="$.fn.showDetails('{{ application.id }}')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                         class="bi bi-gear-wide-connected" viewBox="0 0 16 16">
                                        <path d="M7.068.727c.243-.97 1.62-.97 1.864 0l.071.286a.96.96 0 0 0 1.622.434l.205-.211c.695-.719 1.888-.03 1.613.931l-.08.284a.96.96 0 0 0 1.187 1.187l.283-.081c.96-.275 1.65.918.931 1.613l-.211.205a.96.96 0 0 0 .434 1.622l.286.071c.97.243.97 1.62 0 1.864l-.286.071a.96.96 0 0 0-.434 1.622l.211.205c.719.695.03 1.888-.931 1.613l-.284-.08a.96.96 0 0 0-1.187 1.187l.081.283c.275.96-.918 1.65-1.613.931l-.205-.211a.96.96 0 0 0-1.622.434l-.071.286c-.243.97-1.62.97-1.864 0l-.071-.286a.96.96 0 0 0-1.622-.434l-.205.211c-.695.719-1.888.03-1.613-.931l.08-.284a.96.96 0 0 0-1.186-1.187l-.284.081c-.96.275-1.65-.918-.931-1.613l.211-.205a.96.96 0 0 0-.434-1.622l-.286-.071c-.97-.243-.97-1.62 0-1.864l.286-.071a.96.96 0 0 0 .434-1.622l-.211-.205c-.719-.695-.03-1.888.931-1.613l.284.08a.96.96 0 0 0 1.187-1.186l-.081-.284c-.275-.96.918-1.65 1.613-.931l.205.211a.96.96 0 0 0 1.622-.434zM12.973 8.5H8.25l-2.834 3.779A4.998 4.998 0 0 0 12.973 8.5m0-1a4.998 4.998 0 0 0-7.557-3.779l2.834 3.78zM5.048 3.967l-.087.065zm-.431.355A4.98 4.98 0 0 0 3.002 8c0 1.455.622 2.765 1.615 3.678L7.375 8zm.344 7.646.087.065z"/>
                                    </svg>
                                </a>
                                <span class="hover-text rounded">
                                Maintenance en cours, fin prévue : {{ maintenance.endingDate|date('d-m-Y H:i') }}
                                    {% if application.nextMaintenance.state == "operational" %}
                                        (opérationnel)
                                    {% elseif application.nextMaintenance.state == "perturbed" %}
                                        (perturbée)
                                    {% elseif application.nextMaintenance.state == "unavailable" %}
                                        (indisponible)
                                    {% endif %}
                                </span>
                            {% elseif application.nextMaintenance is not null %}
                                {% set maintenance = application.nextMaintenance %}
                                <a class="action {{ maintenance.state }}-maintenance" onclick="$.fn.showDetails('{{ application.id }}')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                         class="bi bi-gear-wide-connected" viewBox="0 0 16 16">
                                        <path d="M7.068.727c.243-.97 1.62-.97 1.864 0l.071.286a.96.96 0 0 0 1.622.434l.205-.211c.695-.719 1.888-.03 1.613.931l-.08.284a.96.96 0 0 0 1.187 1.187l.283-.081c.96-.275 1.65.918.931 1.613l-.211.205a.96.96 0 0 0 .434 1.622l.286.071c.97.243.97 1.62 0 1.864l-.286.071a.96.96 0 0 0-.434 1.622l.211.205c.719.695.03 1.888-.931 1.613l-.284-.08a.96.96 0 0 0-1.187 1.187l.081.283c.275.96-.918 1.65-1.613.931l-.205-.211a.96.96 0 0 0-1.622.434l-.071.286c-.243.97-1.62.97-1.864 0l-.071-.286a.96.96 0 0 0-1.622-.434l-.205.211c-.695.719-1.888.03-1.613-.931l.08-.284a.96.96 0 0 0-1.186-1.187l-.284.081c-.96.275-1.65-.918-.931-1.613l.211-.205a.96.96 0 0 0-.434-1.622l-.286-.071c-.97-.243-.97-1.62 0-1.864l.286-.071a.96.96 0 0 0 .434-1.622l-.211-.205c-.719-.695-.03-1.888.931-1.613l.284.08a.96.96 0 0 0 1.187-1.186l-.081-.284c-.275-.96.918-1.65 1.613-.931l.205.211a.96.96 0 0 0 1.622-.434zM12.973 8.5H8.25l-2.834 3.779A4.998 4.998 0 0 0 12.973 8.5m0-1a4.998 4.998 0 0 0-7.557-3.779l2.834 3.78zM5.048 3.967l-.087.065zm-.431.355A4.98 4.98 0 0 0 3.002 8c0 1.455.622 2.765 1.615 3.678L7.375 8zm.344 7.646.087.065z"/>
                                    </svg>
                                </a>
                                <span class="hover-text rounded">
                                Maintenance prévue le {{ maintenance.startingDate|date('d-m-Y H:i') }}
                                    {% if application.nextMaintenance.state == "operational" %}
                                        (opérationnel)
                                    {% elseif application.nextMaintenance.state == "perturbed" %}
                                        (perturbée)
                                    {% elseif application.nextMaintenance.state == "unavailable" %}
                                        (indisponible)
                                    {% endif %}
                                </span>
                            {% endif %}
                        </div>
                        <div class="col-3 app-title">{{ application.title }}</div>
                            <div class="col-3 col-lg-2 text-center rounded shadow {{ application.state }}">

                            {% if application.state == "operational" %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                                     class="bi bi-brightness-high-fill" viewBox="0 0 16 16">
                                    <path d="M12 8a4 4 0 1 1-8 0 4 4 0 0 1 8 0M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708"/>
                                </svg>
                                <b>Opérationnel</b>
                            {% elseif application.state == "perturbed" %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-cloud-fill" viewBox="0 0 16 16">
                                    <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383"/>
                                </svg>
                                <b>Perturbé</b>
                            {% elseif application.state == "unavailable" %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-lightning-fill" viewBox="0 0 16 16">
                                    <path d="M5.52.359A.5.5 0 0 1 6 0h4a.5.5 0 0 1 .474.658L8.694 6H12.5a.5.5 0 0 1 .395.807l-7 9a.5.5 0 0 1-.873-.454L6.823 9.5H3.5a.5.5 0 0 1-.48-.641z"/>
                                </svg>
                                <b>Indisponible</b>
                            {% elseif application.state == "default" %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-question-lg" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                          d="M4.475 5.458c-.284 0-.514-.237-.47-.517C4.28 3.24 5.576 2 7.825 2c2.25 0 3.767 1.36 3.767 3.215 0 1.344-.665 2.288-1.79 2.973-1.1.659-1.414 1.118-1.414 2.01v.03a.5.5 0 0 1-.5.5h-.77a.5.5 0 0 1-.5-.495l-.003-.2c-.043-1.221.477-2.001 1.645-2.712 1.03-.632 1.397-1.135 1.397-2.028 0-.979-.758-1.698-1.926-1.698-1.009 0-1.71.529-1.938 1.402-.066.254-.278.461-.54.461h-.777ZM7.496 14c.622 0 1.095-.474 1.095-1.09 0-.618-.473-1.092-1.095-1.092-.606 0-1.087.474-1.087 1.091S6.89 14 7.496 14"/>
                                </svg>
                                <b>Non renseigné</b>
                            {% endif %}

                            </div>
                        <div class="col-3 text-center">{{ application.lastUpdate is null ? "" : application.lastUpdate|date('d-m-Y H:i') }}</div>
                        <div class="col-1">
                            <a class="action" data-toggle="modal" data-target="#details-modal"
                               onclick="$.fn.showDetails('{{ application.id }}')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                     class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                                </svg>
                            </a>
                            <span class="hover-text rounded">Afficher les détails</span>
                        </div>
                        <div class="col-1">
                        {% if is_granted('ROLE_ADMIN') %}
                                <a class="action" href="{{ path('app_edit_application', { 'id' : application.id}) }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                         class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                                    </svg>
                                </a>
                                <span class="hover-text rounded">Modifer</span>
                        {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <span class="d-flex justify-content-center mt-5">Aucun résultat</span>
            {% endif %}
            <div class="row mt-5">
                <nav class="col-1 mx-auto">
                    <ul class="pagination">
                        <li class="page-item">
                            {% if page>2 %}
                                <a class="page-link text-dark" href="{{ path('app_meteo', {'page': page-1}) }}"
                                   aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            {% endif %}
                            {% if page == 2 %}
                        <li class="page-item"><a class="page-link text-dark"
                                                 href="{{ path('app_meteo') }}">1</a></li>
                        {% elseif page > 2 %}
                            <li class="page-item"><a class="page-link text-dark"
                                                     href="{{ path('app_meteo') }}">1</a></li>
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        {% endif %}
                        <li class="page-item disabled"><a class="page-link text-dark"
                                                          href="{{ path('app_meteo', {'page': page}) }}">{{ page }}</a>
                        </li>

                        {% if page == nbPage - 1 %}
                            <li class="page-item"><a class="page-link text-dark"
                                                     href="{{ path('app_meteo', {'page': nbPage }) }}">{{ nbPage }}</a>
                            </li>
                        {% elseif page < nbPage - 1 %}
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                            <li class="page-item"><a class="page-link text-dark"
                                                     href="{{ path('app_meteo', {'page': nbPage }) }}">{{ nbPage }}</a>
                            </li>
                        {% endif %}
                        {% if page<nbPage - 1 %}
                            <a class="page-link text-dark" href="{{ path('app_meteo', {'page': page+1}) }}"
                               aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div id="details-content">
        <!-- POP-UP page de détail -->
        {% include 'meteo/pop-ups/details.html.twig' %}
    </div>
{% endblock %}
