<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Metéo des services{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% for type, messages in app.flashes() %}
    {% for message in messages %}
    <div class="alert alert-{{type == 'error' ? 'danger' : 'success'}} superpose ml-auto">
        {{ message }}
    </div>
    {% endfor %}
{% endfor %}

    <div class="sidebar"></div>
    <div class="marge" id="main-block">
        <div class="container mt-5">
            <div class="row mt-3">
                <div class="col-12">
                    <a class="lien" href="{{ path('app_meteo') }}">
                        <h2 class="mb-5">
                            <img width="50" height="50"
                                src="{{ asset('images/partly-cloudy-day--v1.png') }}"
                                alt="partly-cloudy-day--v1"/>
                            <span class="logo">Météo des services</span>
                        </h2>
                    </a>
                </div>
            </div>

{% block body %}
{% endblock %}
</body>
</html>
