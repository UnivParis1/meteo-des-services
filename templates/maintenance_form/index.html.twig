{% extends 'base.html.twig' %}

{% block body %}

            {{ form_start(maintenanceForm) }}
            <div class="row mt-3">
                <div class="col-3">
                    <h6 class="text-end">Application<span class="text-danger">*</span></h6>
                </div>
                <div class="col-6 col-xl-3 pe-md-5">
                    {{ form_widget(maintenanceForm.application, {'attr': {'class': 'form-control rounder text-center'}}) }}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-3">
                    <h6 class="text-end">État pendant l'opération<span class="text-danger">*</span></h6>
                </div>
                <div class="col-6 col-xl-3 pe-md-5">
                    {{ form_widget(maintenanceForm.applicationState, {'attr': {'class': 'form-select rounder text-center'}}) }}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-3">
                    <h6 class="text-end">Début prévu<span class="text-danger">*</span></h6>
                </div>
                <div class="col-6 col-xl-3 pe-md-5">
                    <div class="text-danger meteo-maintenance-errors">
                        {{ form_errors(maintenanceForm.startingDate) }}
                    </div>
                    {{ form_widget(maintenanceForm.startingDate, {'attr': {'class': 'd-inline form-control rounded text-center pe-5'}}) }}
                    {#{ ajout d'une icone avec des marges négatives pour cliquer sur le calendrier (idem pour endingDate mais je remet pas ce commentaire) }#}
                    <i class="dtipicker d-inline m-n4 m-md-n5 bi bi-calendar"></i>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-3">
                    <h6 class="text-end">Fin prévue<span class="text-danger">*</span></h6>
                </div>
                <div class="col-6 col-xl-3 pe-md-5 me-n4">
                    <div class="text-danger meteo-maintenance-errors">
                        {{ form_errors(maintenanceForm.endingDate) }}
                    </div>
                    {{ form_widget(maintenanceForm.endingDate, {'attr': {'class': 'd-inline form-control rounder text-center pe-5'}}) }}
                    <i class="dtipicker d-inline m-n4 m-md-n5 bi bi-calendar"></i>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-3">
                    <h6 class="text-end">Détail de la maintenance</h6>
                </div>
                <div class="col-6 col-xl-3 pe-md-5">
                    {{ form_widget(maintenanceForm.message, {'attr': {'class': 'form-control rounder text-center'}}) }}
                    <div class="text-danger">
                        {{ form_errors(maintenanceForm.message) }}
                    </div>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-6">
                    <div class="d-flex justify-content-end">Les champs marqués d'un astérisque rouge sont
                        obligatoires.
                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-3"></div>
                <div class="col-6">
                    <button type="submit" id="save" class="shadow px-3 py-2 rounded-pill border-0 text-center"><b>Sauvegarder</b></button>
                </div>
            </div>
            {{ form_end(maintenanceForm) }}
        </div>

    </div>
{% endblock %}